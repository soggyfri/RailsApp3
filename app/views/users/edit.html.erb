<h1> Edit User</h1>

<%= form_for(@user, :html => { :multipart => true}) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>    
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
</div>

<div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %>
</div>

<div class="field">
  <%= f.label :photo, "Profile Picture" %><br />
  <%= f.file_field :photo  %>
</div>

<div class="actons">
  <%= f.submit "Update" %>
</div>

<% end %>

<br />

<h2>Upload picture<h2>
<%= form_for(:user_images, :url => picture_upload_path , :html=>{:multipart=>true}) do |f|  %>

<div class="field">
  <%= f.file_field :photo %>
</div>

<div class="actions">
  <%= f.submit "Upload" %>
</div>

<% end %>

