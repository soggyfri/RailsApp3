<%= form_for @micropost do |f| %> 
 <%= render 'shared/error_messages', :object => f.object %>
 <div class="field">
   <%= f.text_area :content %>
 </div> 
<div class="field">
 <%= f.hidden_field :recipient, :value => @user.id  %>
</div>
 <div class="actions">
   <%= f.submit "Post!" %>
 </div> 
<% end %>
