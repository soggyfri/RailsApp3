<% @user ||= current_user %>

<div class="stats">
  <table summary="User status">
    <tr> 
      <td> 
        <a href="<%= friends_user_path(@user) %>">
          <span id="following" class="stat">
            <%= @user.friends.count %> friends
          </span>
        </a>
      </td>

    </tr>
  </table>
</div>
