<!DOCTYPE html>
<html>
<head>
  <title><%=  title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container" >

    <div id="header" class="span-15"> <h1> Link to logo here </h1> </div>
    <nav class="span-4 last round prepend-top">
        <ul>
          <li><%= link_to "Home", root_path %> </li>
          <li><%= link_to "Help", help_path %> </li>
          <li><%= link_to "Sign In", '#' %> </li>
        </ul>
    </nav>

    <section class="span-17 round"> 
      <% flash.each do |key, value| %>
      <div class="flash <%= key %>"> <%= value %> </div>
      <% end %>
      <%= yield %> 
    </section>

    <% if content_for?(:debug) %>
      <section class="span-5 last"> Test: <%= yield :debug %> </section>
      
    <% end %>
      
      <div class="span-20 prepend-top last"> 
        <p> Put the site footer here! </p>
      </div>

      <div class="span-24 last">
	<%= debug(params) if Rails.env.development? %>
      </div>

  </div>

</body>
</html>
